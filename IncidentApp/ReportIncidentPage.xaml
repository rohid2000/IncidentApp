<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourAppNamespace.Pages.ReportIncidentPage"
             Title="Feedback Form">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <!-- Form Header -->
            <Label Text="Meld het Incident dat u heeft gezien!" 
                   FontSize="24"
                   HorizontalOptions="Center" />

            <!-- Description Field -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Beschrijving Incident:" FontAttributes="Bold"/>
                <Entry x:Description="DescriptionEntry" 
                       Placeholder="Voer de beschrijving van het Incident in"
                       Text="{Binding Description}"/>
            </VerticalStackLayout>

            <!-- Email Field -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Email:" FontAttributes="Bold"/>
                <Entry x:Name="EmailEntry" 
                       Placeholder="Enter your email"
                       Keyboard="Email"
                       Text="{Binding Email}"/>
            </VerticalStackLayout>

            <!-- Rating Picker -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Rating:" FontAttributes="Bold"/>
                <Picker x:Name="RatingPicker"
                        Title="Select a rating"
                        ItemsSource="{Binding RatingOptions}"
                        ItemDisplayBinding="{Binding .}"/>
            </VerticalStackLayout>

            <!-- Feedback Editor -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Your Feedback:" FontAttributes="Bold"/>
                <Editor x:Name="FeedbackEditor" 
                        Placeholder="Enter your feedback here..."
                        AutoSize="TextChanges"
                        HeightRequest="120"
                        Text="{Binding Feedback}"/>
            </VerticalStackLayout>

            <!-- Terms Checkbox -->
            <HorizontalStackLayout Spacing="10">
                <CheckBox x:Name="TermsCheckbox"
                         IsChecked="{Binding AcceptTerms}"/>
                <Label Text="I agree to the terms and conditions"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- Submit Button -->
            <Button Text="Submit Feedback"
                    Clicked="OnSubmitClicked"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HorizontalOptions="Center"
                    WidthRequest="200"/>

            <!-- Back Button -->
            <Button Text="Back to Main"
                    Clicked="OnBackClicked"
                    HorizontalOptions="Center"
                    WidthRequest="200"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>